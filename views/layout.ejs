<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Olympics App</title>
    <!-- CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<!-- header -->
<header id="site-header">
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">Olympics Events</a>
                <a href="/events" class="navbar-brand custom-link">Events</a>
                <a href="/events/create" class="navbar-brand custom-link">Create an Event</a>
            </div>
            <div class="form-inline">
                <form class="form-inline">
                    <label>Login </label>
                    <input type="text" id="login" class="form-control form-login-input">
                    <label>Password </label>
                    <input type="password" id="password" class="form-control form-password-input">
                    <button type="submit" class="btn btn-secondary btn-sm button-signin">Sign In</button>
                    <button type="button" class="btn btn-secondary btn-sm button-register">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</header>
<!-- main -->
<main id="site-main">
    <div class="container">
        <%- body %>
    </div>
</main>
<!-- footer -->
<footer id="site-footer">
    Copyright &copy; 2019 Olympics
</footer>
</body>
</html>